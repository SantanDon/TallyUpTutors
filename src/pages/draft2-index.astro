<style>
	/* NAMESPACE ALL CSS WITH .draft2-wrapper TO AVOID CONFLICTS */
	
	.draft2-wrapper {
		min-height: 100vh;
		background: #0f0f14;
		color: #fff;
		font-family: system-ui, -apple-system, sans-serif;
		position: relative;
		z-index: 1;
		isolation: isolate;
	}

	.draft2-wrapper::before {
		content: '';
		position: fixed;
		inset: 0;
		background: 
			radial-gradient(ellipse at 20% 30%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
			radial-gradient(ellipse at 80% 70%, rgba(236, 72, 153, 0.1) 0%, transparent 50%);
		pointer-events: none;
		z-index: -1;
	}

	/* NAV */
	.d2-nav {
		position: fixed;
		top: 1.5rem;
		left: 50%;
		transform: translateX(-50%);
		width: calc(100% - 3rem);
		max-width: 1200px;
		z-index: 1000;
	}

	.d2-nav-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;
		background: rgba(20, 20, 30, 0.95);
		border: 1px solid rgba(255,255,255,0.1);
		border-radius: 100px;
	}

	.d2-logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
	}

	.d2-logo-icon { color: #fff; font-size: 1.2rem; }
	.d2-logo-text { font-weight: 700; font-size: 1.2rem; letter-spacing: -0.5px; }
	.d2-logo-sub { font-size: 0.5rem; color: rgba(255,255,255,0.5); letter-spacing: 2px; }

	.d2-nav-links { display: flex; align-items: center; gap: 2rem; }
	.d2-nav-links a {
		color: rgba(255,255,255,0.7);
		text-decoration: none;
		font-size: 0.9rem;
	}

	.d2-btn-nav {
		padding: 0.75rem 1.5rem;
		background: #fff;
		color: #0f0f14 !important;
		border-radius: 100px;
		font-weight: 600;
	}

	/* HERO */
	.d2-hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		max-width: 1200px;
		margin: 0 auto;
		padding: 10rem 2rem 6rem;
	}

	.d2-hero-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.6rem 1.25rem;
		background: rgba(99, 102, 241, 0.15);
		border: 1px solid rgba(99, 102, 241, 0.3);
		border-radius: 100px;
		font-size: 0.85rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
	}

	.d2-badge-dot {
		width: 8px;
		height: 8px;
		background: #6366f1;
		border-radius: 50%;
	}

	.d2-hero-title {
		font-size: 3.25rem;
		font-weight: 800;
		line-height: 1.15;
		margin-bottom: 1.5rem;
		letter-spacing: -1px;
	}

	.d2-hero-desc {
		font-size: 1.1rem;
		color: rgba(255,255,255,0.6);
		margin-bottom: 2rem;
		line-height: 1.7;
	}

	.d2-hero-btns { display: flex; gap: 1rem; margin-bottom: 3rem; }

	.d2-btn-primary, .d2-btn-secondary {
		padding: 1rem 2rem;
		border-radius: 100px;
		font-weight: 600;
		text-decoration: none;
