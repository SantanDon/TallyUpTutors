	}

	.feature-title-bold {
		font-size: 1rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
	}

	.feature-desc-bold {
		font-size: 0.85rem;
		color: var(--color-text-muted);
		transition: color 0.2s;
	}

	/* ==================== SUBJECTS ==================== */
	.subjects-bold {
		padding: 5rem 0;
	}

	.subjects-grid-bold {
		display: grid;
		grid-template-columns: 1.5fr 1fr;
		gap: 0;
		border: 2px solid var(--color-border);
	}

	.subject-main-box {
		padding: 2.5rem;
		text-align: center;
		border-right: 2px solid var(--color-border);
	}

	.subject-icon-box {
		width: 80px;
		height: 80px;
		margin: 0 auto 1.5rem;
		background: var(--color-primary);
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
	}

	.subject-badge-bold {
		display: inline-block;
		padding: 0.4rem 1rem;
		background: var(--color-surface-alt);
		font-size: 0.8rem;
		font-weight: 700;
		color: var(--color-primary);
		margin-bottom: 1rem;
	}

	.subject-title-bold {
		font-size: 1.75rem;
		font-weight: 800;
		margin-bottom: 1rem;
	}

	.subject-tags-bold {
		display: flex;
		justify-content: center;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.tag-bold {
		padding: 0.4rem 0.75rem;
		background: var(--color-surface);
		font-size: 0.8rem;
		color: var(--color-text-muted);
	}

	.subjects-side-box {
		display: flex;
		flex-direction: column;
	}

	.subject-small-box {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem;
		border-bottom: 2px solid var(--color-border);
		transition: all 0.2s;
	}

	.subject-small-box:last-child {
		border-bottom: none;
	}

	.subject-small-box:hover {
		background: var(--color-surface);
	}

	.mini-icon-box {
		width: 48px;
		height: 48px;
		background: var(--color-surface-alt);
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--color-primary);
		flex-shrink: 0;
	}

	.subject-small-box h4 {
		font-size: 1rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.mini-badge-bold {
		font-size: 0.75rem;
		color: var(--color-text-muted);
	}

	/* ==================== PRICING ==================== */
	.pricing-bold {
		padding: 5rem 0;
		background: var(--color-surface);
	}

	.pricing-grid-bold {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 0;
		border: 2px solid var(--color-border);
	}

	.pricing-box {
		padding: 2rem;
		border-right: 2px solid var(--color-border);
		transition: all 0.2s;
	}

	.pricing-box:last-child {
		border-right: none;
	}

	.pricing-box.featured-box {
		background: var(--color-primary);
		color: white;
	}

	.featured-badge-bold {
		display: inline-block;
		padding: 0.4rem 0.75rem;
		background: white;
		color: var(--color-primary);
		font-size: 0.75rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.pricing-title-bold {
		font-size: 1.25rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.pricing-hours-bold {
		font-size: 0.9rem;
		color: var(--color-text-muted);
	}

	.featured-box .pricing-hours-bold {
		color: rgba(255, 255, 255, 0.8);
	}

	.pricing-price-box {
		margin: 1.5rem 0 0.25rem;
	}

	.price-currency {
		font-size: 1.25rem;
		color: var(--color-primary);
		font-weight: 700;
		vertical-align: top;
	}

	.featured-box .price-currency {
		color: white;
	}

	.price-amount-bold {
		font-size: 3rem;
		font-weight: 800;
		line-height: 1;
		color: var(--color-text);
	}

	.featured-box .price-amount-bold {
		color: white;
	}

	.price-period-bold {
		font-size: 0.9rem;
		color: var(--color-text-muted);
	}

	.featured-box .price-period-bold {
		color: rgba(255, 255, 255, 0.8);
	}

	.pricing-rate-bold {
		font-size: 0.85rem;
		color: var(--color-text-muted);
	}

	.featured-box .pricing-rate-bold {
		color: rgba(255, 255, 255, 0.8);
	}

	.pricing-features-bold {
		list-style: none;
		padding: 0;
		margin: 1.5rem 0;
	}

	.pricing-features-bold li {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 0;
		border-bottom: 1px solid var(--color-border);
	}

	.featured-box .pricing-features-bold li {
		border-color: rgba(255, 255, 255, 0.2);
	}

	.pricing-features-bold li:last-child {
		border-bottom: none;
	}

	.check-bold {
		color: var(--color-primary);
	}

	.featured-box .check-bold {
		color: white;
	}

	/* ==================== INFO STRIP ==================== */
	.info-strip {
		padding: 1.5rem 0;
		background: var(--color-text);
		color: white;
	}

	.info-inner-strip {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: center;
		gap: 4rem;
	}

	.info-item-strip {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-size: 0.95rem;
	}

	.info-icon {
		color: var(--color-primary);
	}

	/* ==================== CONTACT ==================== */
	.contact-bold {
		padding: 5rem 0;
	}

	.contact-container {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 2rem;
		display: grid;
		grid-template-columns: 1fr 1.2fr;
		gap: 4rem;
	}

	.contact-desc-bold {
		color: var(--color-text-muted);
		margin-bottom: 2rem;
	}

	.contact-cards-bold {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.contact-box {
		display: flex;
		gap: 1rem;
		padding: 1.25rem;
		background: var(--color-surface);
		border: 2px solid var(--color-border);
	}

	.contact-icon-bold {
		font-size: 1.25rem;
		color: var(--color-primary);
	}

	.contact-box h5 {
		font-size: 0.95rem;
		font-weight: 700;
		margin-bottom: 0.25rem;
	}

	.contact-box p {
		font-size: 0.85rem;
		color: var(--color-text-muted);
		line-height: 1.6;
	}

	/* Contact Form - Bold */
	.contact-form-bold {
		padding: 2.5rem;
		background: var(--color-surface);
		border: 2px solid var(--color-border);
	}

	.form-title-bold {
		font-size: 1.25rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
	}

	.form-group-bold {
		margin-bottom: 1rem;
	}

	.form-group-bold label {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: 500;
		color: var(--color-text);
		font-size: 0.9rem;
	}

	.form-group-bold input {
		width: 100%;
		padding: 0.875rem 1rem;
		background: var(--color-bg);
		border: 2px solid var(--color-border);
		font-size: 1rem;
		color: var(--color-text);
		transition: all 0.2s;
	}

	.form-group-bold input::placeholder {
		color: var(--color-text-muted);
	}

	.form-group-bold input:focus {
		outline: none;
		border-color: var(--color-primary);
	}

	.form-row-bold {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.form-checkbox-bold {
		margin: 1.5rem 0;
	}

	.checkbox-bold {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		cursor: pointer;
		font-size: 0.9rem;
		color: var(--color-text-muted);
	}

	.checkbox-bold input {
		display: none;
	}

	.checkbox-box {
		width: 20px;
		height: 20px;
		border: 2px solid var(--color-border);
		display: flex;
		align-items: center;
		justify-content: center;
		transition: all 0.2s;
	}

	.checkbox-bold input:checked + .checkbox-box {
		background: var(--color-primary);
		border-color: var(--color-primary);
	}

	.checkbox-bold input:checked + .checkbox-box::after {
		content: '✓';
		color: white;
		font-size: 12px;
		font-weight: bold;
	}

	/* ==================== FOOTER ==================== */
	.footer-bold {
		padding: 3rem 0;
		background: var(--color-text);
		color: white;
		text-align: center;
	}

	.footer-inner-bold {
		max-width: 600px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.footer-brand-bold {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		margin-bottom: 0.75rem;
	}

	.brand-block-lg {
		width: 10px;
		height: 10px;
		background: var(--color-primary);
	}

	.brand-text-lg {
		font-size: 1.5rem;
		font-weight: 800;
	}

	.brand-accent-lg {
		font-size: 1.5rem;
		font-weight: 400;
		color: var(--color-primary);
	}

	.footer-tagline-bold {
		color: rgba(255, 255, 255, 0.7);
		margin-bottom: 1rem;
	}

	.footer-links-bold {
		margin-bottom: 1rem;
	}

	.footer-links-bold a {
		color: var(--color-primary);
		text-decoration: none;
		font-size: 0.9rem;
	}

	.footer-links-bold a:hover {
		text-decoration: underline;
	}

	.footer-copy-bold {
		color: rgba(255, 255, 255, 0.5);
		font-size: 0.8rem;
	}

	/* ==================== ANIMATIONS ==================== */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeIn {
		from { opacity: 0; }
		to { opacity: 1; }
	}

	.hero-label {
		animation: fadeInUp 0.6s ease-out;
	}

	.hero-headline {
		animation: fadeInUp 0.6s ease-out 0.1s backwards;
	}

	.hero-subtitle {
		animation: fadeInUp 0.6s ease-out 0.2s backwards;
	}

	.hero-actions {
		animation: fadeInUp 0.6s ease-out 0.3s backwards;
	}

	.stats-grid {
		animation: fadeInUp 0.6s ease-out 0.4s backwards;
	}

	.hero-card-geo {
		animation: fadeIn 0.8s ease-out 0.3s backwards;
	}

	.section-header-bold {
		animation: fadeInUp 0.6s ease-out;
	}

	.features-grid-bold {
		animation: fadeInUp 0.6s ease-out 0.2s backwards;
	}

	.subjects-grid-bold {
		animation: fadeInUp 0.6s ease-out 0.2s backwards;
	}

	.pricing-grid-bold {
		animation: fadeInUp 0.6s ease-out 0.2s backwards;
	}

	.contact-container {
		animation: fadeInUp 0.6s ease-out;
	}

