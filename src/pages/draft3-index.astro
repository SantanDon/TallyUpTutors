	.label-square.small {
		width: 6px;
		height: 6px;
	}

	.hero-headline {
		font-size: 3.5rem;
		font-weight: 800;
		line-height: 1;
		letter-spacing: -2px;
		margin-bottom: 1.5rem;
	}

	.highlight-green {
		color: var(--color-primary);
	}

	.hero-subtitle {
