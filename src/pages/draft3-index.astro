<style>
	/* ==================== DRAFT 3 - MINIMALIST LIGHT + GREEN + SHARP ==================== */
	@import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700;800&display=swap');

	.draft3-theme {
		--color-bg: #ffffff;
		--color-surface: #f0fdf4;
		--color-surface-alt: #dcfce7;
		--color-primary: #059669;
		--color-primary-dark: #047857;
		--color-accent: #1e293b;
		--color-text: #0f172a;
		--color-text-muted: #64748b;
		--color-border: #0f172a;
		
		background: var(--color-bg);
		color: var(--color-text);
		font-family: 'DM Sans', sans-serif;
		min-height: 100vh;
		overflow-x: hidden;
	}

	/* ==================== GEOMETRIC BACKGROUND ==================== */
	.geo-bg {
		position: fixed;
		inset: 0;
		pointer-events: none;
		z-index: 0;
		overflow: hidden;
	}

	.geo-line {
		position: absolute;
		top: 0;
		right: 0;
		width: 40%;
		height: 2px;
		background: var(--color-surface-alt);
	}

	.geo-circle {
		position: absolute;
		top: 10%;
		right: 5%;
		width: 80px;
		height: 80px;
		border: 1px solid var(--color-surface-alt);
		border-radius: 0;
		transform: rotate(45deg);
		opacity: 0.3;
	}

	.geo-square {
		position: absolute;
		bottom: 10%;
		left: 3%;
		width: 40px;
		height: 40px;
		background: var(--color-surface-alt);
		opacity: 0.3;
	}

	/* ==================== SOLID NAVBAR ==================== */
	.navbar-solid {
		position: sticky;
		top: 0;
		z-index: 1000;
		background: var(--color-bg);
		border-bottom: 2px solid var(--color-border);
	}

	.nav-inner {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
	}

	.nav-brand {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
	}

	.brand-block {
		width: 12px;
		height: 12px;
		background: var(--color-primary);
	}

	.brand-text {
		font-size: 1.25rem;
		font-weight: 800;
		color: var(--color-text);
		letter-spacing: -0.5px;
	}

	.brand-accent {
		font-size: 0.6rem;
		color: var(--color-primary);
		letter-spacing: 2px;
		font-weight: 700;
	}

	.nav-center {
		display: flex;
		gap: 3rem;
	}

	.nav-link-solid {
		color: var(--color-text);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		position: relative;
		transition: color 0.2s;
	}

	.nav-link-solid::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
